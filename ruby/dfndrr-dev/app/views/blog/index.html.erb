  <script type="text/javascript">
    $(function() {
      $.getJSON('http://dfndrr.s3.amazonaws.com/test/posts.json', function(data) {
        var template = $('#testimonialtpl').html();
        var html = Mustache.to_html(template, data);
        $('#testimonialContainer').html(html);
    
        $('#testimonialContainer').cycle({
          pause: 1,
          speed: 500,
          timeout: 10000,

          slideResize: true,
          containerResize: true,
          width: '100%',
          height: '100%',
          fit: 1,

          fx: 'fade',
          next: '#next_btn',
          prev: '#prev_btn'

        });
      }); //getJSON
    }); //function
  </script>


